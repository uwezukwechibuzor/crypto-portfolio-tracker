# Application
APP_NAME="Crypto Portfolio Tracker"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"
HOST="0.0.0.0"
PORT=5000  # Container internal port (mapped to 8000 externally in Docker)

# API Configuration
API_V1_PREFIX="/api/v1"
CORS_ORIGINS="http://localhost:3000,http://localhost:8000"
API_KEY=""

# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/crypto_portfolio"
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=50
CACHE_TTL=300

# Ethereum
# Note: Update with your own Infura/Alchemy API key for production
ETHEREUM_RPC_URL="https://mainnet.infura.io/v3/YOUR_INFURA_KEY"
ETHEREUM_CHAIN_ID=1
ETHEREUM_TIMEOUT=30

# Solana
SOLANA_RPC_URL="https://api.mainnet-beta.solana.com"
SOLANA_TIMEOUT=30

# Cosmos Hub
COSMOS_RPC_URL="https://cosmos-rest.publicnode.com"
COSMOS_TIMEOUT=30

# Celestia
CELESTIA_RPC_URL="https://api.celestia.strange.love"
CELESTIA_TIMEOUT=30

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
